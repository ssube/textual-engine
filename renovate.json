{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(update)",
    ":semanticCommitScopeDisabled"
  ],
  "branchPrefix": "update/",
  "packageRules": [
    {
      "automerge": true,
      "matchPackageNames": [
        "@microsoft/api-documenter",
        "@microsoft/api-extractor"
      ],
      "extends": [
        "schedule:earlyMondays"
      ],
      "groupName": "rushstack"
    },
    {
      "matchPackageNames": [
        "aws-sdk"
      ],
      "extends": [
        "schedule:earlyMondays"
      ]
    },
    {
      "automerge": true,
      "matchPackageNames": [
        "@istanbuljs/nyc-config-typescript",
        "@types/chai",
        "@types/chai-as-promised",
        "@types/mocha",
        "@types/sinon",
        "@types/sinon-chai",
        "chai",
        "chai-as-promised",
        "mocha",
        "nyc",
        "sinon",
        "sinon-chai"
      ],
      "extends": [
        "schedule:daily"
      ],
      "groupName": "tests"
    },
    {
      "matchPackagePatterns": [
        "eslint",
        "eslint-plugin-.+"
      ],
      "matchPackagePrefixes": [
        "eslint"
      ],
      "extends": [
        "schedule:daily"
      ],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": [
        "esbuild",
        "esbuild-plugin-.+"
      ],
      "matchPackagePrefixes": [
        "@esbuild-plugins"
      ],
      "extends": [
        "schedule:earlyMondays"
      ],
      "groupName": "esbuild"
    }
  ]
}
